
@using SchoolApp.Web.Models
@using SchoolApp.Web.Code.Serialization

@{ ViewBag.Title = "Manage Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Content/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<section class="content-header">
    <h1>
        Faculty Management
    </h1>

</section>
<section class="content">

    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="box-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a id="AddEditFacultyModal" data-toggle="modal" href="@Url.Action("AddEditFaculty","Faculty")" data-target="#modal-add-edit-faculty" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Add New
                            </a>
                        </div>


                    </div>
                </div>
                <div class="box-body table-responsive">

                    <table id="grid-faculty-management" class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Faculty Id</th>
                                <th width="1%">#</th>
                                <th>First  Name</th>
                                <th>Last Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Salary</th>
                                <th>Date Of Joining</th>
                                <th>Status </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>



@Html.Partial("_modal", new Modal { ID = "modal-add-edit-faculty", AreaLabeledId = "modal-add-edit-faculty-label", Size = ModalSize.Medium })
@Html.Partial("_modal", new Modal { ID = "modal-delete-faculty", AreaLabeledId = "modal-delete-faculty-label", Size = ModalSize.Medium })

@section scripts
{
    @Scripts.Render("~/Scripts/views/faculty/Faculty-List.js")

}



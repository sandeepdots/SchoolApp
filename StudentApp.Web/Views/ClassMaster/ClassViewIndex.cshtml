@using SchoolApp.Web.Models
@using SchoolApp.Web.Code.Serialization
@{
    ViewBag.Title = "ClassViewIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <link href="~/Content/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

}

<section class="content-header">
    <h1>
        Manage Class Master
    </h1>

</section>
<section class="content">

    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="box-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a id="addClassMastermentmodal" data-toggle="modal" href="@Url.Action("AddUpdateClassMaster","ClassMaster")" data-target="#modal-add-edit-classmaster" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Add New
                            </a>
                        </div>
                    </div>
                </div>
                <div class="box-body table-responsive">

                    <table id="grid-classmaster-management" class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th width="2%">#</th>
                                <th>Class</th>
                                <th>IsActive</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_Modal", new Modal { ID = "modal-add-edit-classmaster", AreaLabeledId = "modal-add-edit-classmaster-label", Size = ModalSize.Large })
@Html.Partial("_Modal", new Modal { ID = "modal-delete-classmaster", AreaLabeledId = "modal-delete-classmaster-label", Size = ModalSize.Large })
@section scripts
{
    <script src="~/Scripts/views/classmaster/classmaster.js"></script>
    <link href="~/Content/css/bootstrap-switch.css" rel="stylesheet" />
}





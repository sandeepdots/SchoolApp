@model SchoolApp.Web.Model.RegistrationViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_RegisterMaster.cshtml";
}


<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="container">

        <section class="content-header">
            <div class="container">

                <div class="col-sm-12 offset-1">
                    <h1> Please Login</h1>
                </div>


            </div>
        </section>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-10  pb-4">

                <div class="card card-primary ">
                    <div class="card-header">
                        <h3 class="card-title">User Login</h3>
                    </div>

                    <form id="quickForm" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" name="password" class="form-control" id="password" placeholder=" Enter Password">
                            </div>
                            @*<div class="form-group">
                                    <label for="exampleInputRoleId">Role</label>
                                    @Html.DropDownListFor(model => model.RoleId, Model.RoleList, "select", new { @class = "form-control" })
                                </div>*@

                        </div>
                        <div class="card-footer">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6"></div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="~/login/ForgotPassword" class="btn btn-danger">Forgot Password</a>

                        </div>
                        <div class="col-sm-3"></div>
                    </form>
                </div>


                <div class="col-md-1">

                </div>

            </div>

        </div>
    </div>


</body>
</html>


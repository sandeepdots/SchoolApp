

@{
    ViewBag.Title = "AllocationIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-switch.css" rel="stylesheet" />
  
}

<section class="content-header">
    <h2>Faculty ClassAllocation Manager</h2>
</section>
<section class="content">
    <div class="row">
        @Html.Partial("_MessageNotification")
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="box-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a id="AddEditFacultyAllocationModal" data-toggle="modal" href="@Url.Action("AddUpdateAllocation","FacultyAllocation")" data-target="#modal-add-edit-allocation" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Assign Class
                            </a>
                        </div>


                    </div>
                </div>
                <div class="box-body table-responsive">

                    <table id="grid-allocation-management" class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th style="visibility:hidden">FacultyAllocation ID</th>
                                <th width="1%">#</th>
                                <th>Name</th>
                                <th>Class</th>
                                <th>Subject</th>
                                <th>Class Start Time</th>
                                <th>Class End Time</th>
                                <th>IsActive </th>
                                <th>Action </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>



@Html.Partial("_modal", new Modal { ID = "modal-add-edit-allocation", AreaLabeledId = "modal-add-edit-allocation-label", Size = ModalSize.Large })
@Html.Partial("_modal", new Modal { ID = "modal-delete-allocation", AreaLabeledId = "modal-delete-allocation-label", Size = ModalSize.Medium })
@section scripts
{
    
    <script src="~/Scripts/views/FacultyAllocationList/AllocationList.js"></script>

}

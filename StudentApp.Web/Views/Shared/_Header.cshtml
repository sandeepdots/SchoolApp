<header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>E</b>PT</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><img src="~/Images/site-logo.jfif" alt="logo" style="width: 86px"></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img  src="~/Images/default-user.png" height="20" width="20" class="img-circle" alt="User Image">

                        <span class="hidden-xs">Guest User</span>

                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/Images/default-user.png" height="20" width="20" class="img-circle" alt="User Image">
                            <p>
                                Guest User
                                <small>
                                    Member since 1997
                                </small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a id="btnAdminUpdatePassword" data-toggle="modal" data-target="#change-password-modal" href="@Url.Action("ChangePassword","Account")" class="btn btn-default btn-flat">Change Password</a>
                            </div>
                            <div class="pull-right">
                                <a href="@Url.Action("Logout", "Account")" id="admsignot" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>

            </ul>
        </div>
    </nav>
</header>